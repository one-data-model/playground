{
  "info": {
    "title": "Example SDF model for the ZCL OnOff cluster", 
    "version": "2020-07-06", 
    "copyright": "Copyright (c) 2019, Zigbee Alliance All rights reserved.", 
    "license": "https://github.com/one-data-model/oneDM/blob/master/LICENSE"
  }, 
  "namespace": {
    "pg": "https://onedm.org/playground/#"
  }, 
  "defaultNamespace": "pg", 
  "sdfObject": {
    "OnOff": {
      "label": "OnOff", 
      "sdfRequired": [
        "#/sdfObject/OnOff/sdfProperty/OnOff", 
        "#/sdfObject/OnOff/sdfAction/On",
        "#/sdfObject/OnOff/sdfAction/Off",
        "#/sdfObject/OnOff/sdfAction/Toggle"
      ],
      "sdfProperty": {
        "OnOff": {
          "label": "OnOff", 
          "type": "boolean",
          "default": false
        }, 
        "GlobalSceneControl": {
          "label": "GlobalSceneControl", 
          "type": "boolean",
          "default": true
        }, 
        "OnTime": {
          "sdfRef": "#/sdfData/TransitionTimeData", 
          "label": "OnTime", 
          "default": 0
        }, 
        "OffWaitTime": {
          "sdfRef": "#/sdfData/TransitionTimeData", 
          "label": "OffWaitTime", 
          "default": 0
        }, 
        "StartUpOnOff": {
          "sdfRef": "#/sdfData/StartUpOnOffMode", 
          "label": "StartUpOnOff"
        }
      }, 
      "sdfAction": {
        "Off": {
          "label": "Off" 
        }, 
        "On": {
          "label": "On"
        }, 
        "Toggle": {
          "label": "Toggle"
        }, 
        "OffWithEffect": {
          "label": "OffWithEffect",
          "sdfRequired": [
          ],
          "sdfInputData": [
            "#/sdfObject/OnOff/sdfAction/OffWithEffect/sdfData/EffectIdentifier", 
            "#/sdfObject/OnOff/sdfAction/OffWithEffect/sdfData/EffectVariant"
          ],
          "sdfData": {
            "EffectIdentifier": {
              "label": "EffectIdentifier", 
              "type": "number",
              "enum": [
                "DelayedAllOff",
                "DyingLight"
              ]
            }, 
            "EffectVariant": {
              "label": "EffectVariant", 
              "type": "number" 
            }
          }
        },
        "OnWithRecallGlobalScene": {
          "label": "OnWithRecallGlobalScene"
        }, 
        "OnWithTimedOff": {
          "label": "OnWithTimedOff", 
          "sdfInputData": [
            "#/sdfObject/OnOff/sdfAction/OnWithTimedOff/sdfData/OnOffControl",
            "#/sdfObject/OnOff/sdfAction/OnWithTimedOff/sdfData/OnTime",
            "#/sdfObject/OnOff/sdfAction/OnWithTimedOff/sdfData/OffWaitTIme"
          ],
          "sdfData": {
            "OnOffControl": {
              "description": "implemented as a bitmap, modeled as an array of boolean",
              "type": "array",
              "maxItems": 1,
              "items" : [
                {
                  "type": "boolean",
                  "description": "Accept Only When On"
                }
              ]
            },
            "OnTime": {
              "sdfRef": "#/sdfData/TransitionTimeData"
            }, 
            "OffWaitTime": {
              "sdfRef": "#/sdfData/TransitionTimeData"
            }
          }
        }
      }, 
      "sdfData": {
        "TransitionTimeData": {
          "type": "number", 
          "minimum": 0, 
          "maximum": 65535, 
          "multipleOf": 1
        },
        "StartUpOnOffMode": {
          "type": "number",
          "enum": [
            "SetOnOffTo0",
            "SetOnOffTo1",
            "TogglePreviousOnOff",
            "SetPreviousOnOff"
          ]
        }
      }
    }
  }
}